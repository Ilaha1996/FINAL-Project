@using Web_AppointmentSystem.MVC.Areas.Admin.ViewModels.AppointmentVM
@model List<AppointmentGetVM>
@{
    int counter = 0;
}

<div style="display:flex; justify-content:space-between; align-items:center; padding: 0 530px 0 20px">
    <h1>Appointments</h1>
    <a asp-action="Create" class="btn btn-success">Create</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">UserId</th>
            <th scope="col">UserFullname</th>
            <th scope="col">ServiceId</th>
            <th scope="col">ServiceName</th>
            <th scope="col">Date</th>
            <th scope="col">StartTime</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@book.UserId</td>
                <td>@book.UserFullname</td>
                <td>@book.ServiceId</td>
                <td>@book.ServiceName</td>
                <td>@book.Date</td>
                <td>@book.StartTime</td>
            </tr>
        }
    </tbody>
</table>
