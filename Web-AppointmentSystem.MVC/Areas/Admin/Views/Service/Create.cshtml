@using Web_AppointmentSystem.MVC.Areas.Admin.ViewModels.ServiceVM
@model ServiceCreateVM

<div class="container-fluid">
    <h1>Create Service</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-md-2">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" type="text" class="form-control" aria-describedby="nameHelp">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-4">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" type="text" class="form-control" aria-describedby="descHelp">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-2">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" type="number" class="form-control" aria-describedby="priceHelp" min="0" step="0.01">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-2">
                <label asp-for="Duration" class="form-label">Duration (minutes)</label>
                <input asp-for="Duration" type="number" class="form-control" min="0" aria-describedby="durationHelp">
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-4">
                <label asp-for="Image" class="form-label">Image</label>
                <input asp-for="Image" type="file" class="form-control" accept="image/png, image/jpeg">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>
